# define our source to loook for gems
source "http://rubygems.org/"

# declare the sinatra dependency
gem "sinatra"

gem "httparty", "~> 0.11.0"
gem "haml", "~> 4.0.2"
gem "thin", "~> 1.5.1"

group :development do
  gem "debugger"
end

# setup our test group and require rspec
group :test do
  gem "rspec"
end